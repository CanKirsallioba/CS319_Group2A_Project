<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HowToPlayController">
    <children>
        <Label alignment="CENTER" prefHeight="60.0" prefWidth="1920.0" text="How to Play">
            <font>
                <Font name="Georgia" size="39.0" />
            </font>
        </Label>
        <ScrollPane fx:id="howToPlayScrollPane" layoutY="80.0" prefHeight="1000.0" prefWidth="1920.0" style="-fx-background-color: transparent; -fx-background: transparent;">
            <content>
                <Label fx:id="howToPlayLabel" alignment="TOP_LEFT" layoutY="15.0" prefWidth="1870.0" text="Label" wrapText="true">
                    <font>
                        <Font name="Georgia" size="18.0" />
                    </font>
                    <padding>
                        <Insets left="10.0" />
                    </padding>
                </Label>
            </content>
        </ScrollPane>
        <AnchorPane layoutX="27.0" layoutY="10.0" prefHeight="48.0" prefWidth="55.0">
            <children>
                <ImageView fx:id="backIcon" fitHeight="48.0" fitWidth="55.0" layoutX="27.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@./back.png" />
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
                </ImageView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
