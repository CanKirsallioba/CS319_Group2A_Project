<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" style="-fx-background-image: url(CreditsBackground.jpg);" stylesheets="@main/resources/CreditsStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.monopoly.controller.AuctionController">
   <children>
      <Label layoutX="650.0" layoutY="75.0" text="Raise for:">
         <font>
            <Font size="28.0" />
         </font>
      </Label>
      <Label fx:id="auctionPropertyName" layoutX="100.0" layoutY="75.0" text="Property Name" wrapText="true">
         <font>
            <Font size="32.0" />
         </font>
      </Label>
      <Button fx:id="auctionButton1" layoutX="650.0" layoutY="150.0" mnemonicParsing="false" onAction="#raisePlayer1" prefHeight="50.0" prefWidth="150.0" styleClass="menuButtons" stylesheets="@main/resources/GameBoardStyle.csseBoardStyle.css" text="Player 1" />
      <Button fx:id="auctionButton2" layoutX="650.0" layoutY="250.0" mnemonicParsing="false" onAction="#raisePlayer2" prefHeight="50.0" prefWidth="150.0" styleClass="menuButtons" stylesheets="@main/resources/GameBoardStyle.csseBoardStyle.css" text="Player 2" />
      <Button fx:id="auctionButton3" layoutX="650.0" layoutY="350.0" mnemonicParsing="false" onAction="#raisePlayer3" prefHeight="50.0" prefWidth="150.0" styleClass="menuButtons" stylesheets="@main/resources/GameBoardStyle.csseBoardStyle.css" text="Player 3" />
      <Button fx:id="auctionButton4" layoutX="650.0" layoutY="450.0" mnemonicParsing="false" onAction="#raisePlayer4" prefHeight="50.0" prefWidth="150.0" styleClass="menuButtons" stylesheets="@main/resources/GameBoardStyle.csseBoardStyle.css" text="Player 4" />
      <Button fx:id="auctionButton5" layoutX="650.0" layoutY="550.0" mnemonicParsing="false" onAction="#raisePlayer5" prefHeight="50.0" prefWidth="150.0" styleClass="menuButtons" stylesheets="@main/resources/GameBoardStyle.csseBoardStyle.css" text="Player 5" />
      <Button fx:id="auctionButton6" layoutX="650.0" layoutY="650.0" mnemonicParsing="false" onAction="#raisePlayer6" prefHeight="50.0" prefWidth="150.0" styleClass="menuButtons" stylesheets="@main/resources/GameBoardStyle.csseBoardStyle.css" text="Player 6" />
      <Label layoutX="50.0" layoutY="200.0" text="Remaining Time: ">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label fx:id="timeLabel" layoutX="330.0" layoutY="200.0" text="Label">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="400.0" text="Current Price: ">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label fx:id="currentPrice" layoutX="330.0" layoutY="400.0" text="Label">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="500.0" text="Raise Amount:">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label fx:id="raiseAmount" layoutX="330.0" layoutY="500.0" text="25">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label layoutX="50.0" layoutY="600.0" text="Current Owner:">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <Label fx:id="currentOwner" layoutX="300.0" layoutY="600.0" text="Player 1">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
